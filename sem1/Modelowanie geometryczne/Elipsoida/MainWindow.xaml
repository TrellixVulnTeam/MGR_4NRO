<Window x:Class="Elipsoida.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Elipsoida"
        xmlns:opentk="clr-namespace:OpenTK;assembly=OpenTK.GLControl"
        mc:Ignorable="d"
        Title="Elipsoida" Height="1000" Width="1000"
        Name="window"
        ResizeMode="NoResize"
        >
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Right">
                <Slider x:Name="xRadiusSlider" Maximum="100" Value="60"></Slider>
                <Slider x:Name="yRadiusSlider" Maximum="100" Value="50"></Slider>
                <Slider x:Name="zRadiusSlider" Maximum="100" Value="40"></Slider>
                <Button x:Name="buttonSetTRColor" Content="Set TR Color" Margin="5" ></Button>
            </StackPanel>
            <Image x:Name="i" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="800" Height="800" MouseLeftButtonDown="i_MouseLeftButtonDown" MouseLeftButtonUp="i_MouseLeftButtonUp" MouseRightButtonDown="i_MouseRightButtonDown" MouseRightButtonUp="i_MouseRightButtonUp"/>
        </DockPanel>
    </Grid>
</Window>